@model PaczkaWRuchuTestWebApp.Models.FindPickupPointViewModel

@{
    ViewBag.Title = "Wyszukaj punkt";
}

@using (Html.BeginForm("Index", "GenerateLabel", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="form-group">
            <h4>
                @Html.LabelFor(model => model.City, new { @class = "control-label col-md-12" })
            </h4>
            <hr />
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.City)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Znajdź punkt" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}