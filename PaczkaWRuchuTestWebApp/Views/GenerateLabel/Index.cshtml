@model PaczkaWRuchuTestWebApp.Models.GenerateLabelViewModel

@{
    ViewBag.Title = "Generuj etykietę";
}

@using (Html.BeginForm("Generate", "GenerateLabel", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="form-group">
            <h4>@Html.LabelFor(model => model.PickupPoint, new { @class = "control-label col-md-12" })</h4>
            <hr />
            <div class="col-md-12">
                @Html.DropDownListFor(x => x.PickupPoint, (SelectList)ViewBag.PickupPoints, "Wybierz punkt...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PickupPoint)
            </div>
        </div>

        <h4>Odbiorca</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PhoneNumber, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
        </div>

        <h4>Nadawca</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.SenderFirstName, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.SenderFirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SenderFirstName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SenderLastName, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.SenderLastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SenderLastName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SenderEMail, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.SenderEMail, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SenderEMail)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SenderStreetName, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.SenderStreetName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SenderStreetName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SenderBuildingNumber, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.SenderBuildingNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SenderBuildingNumber)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SenderCity, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.SenderCity, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SenderCity)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SenderPostCode, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.SenderPostCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SenderPostCode)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SenderPhoneNumber, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.SenderPhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SenderPhoneNumber)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Generuj etykietę" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Powrót do wyboru miasta", "Index", "FindPickupPoint")
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}